<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="expense_voucher_document">
        <t t-call="web.html_container">
            <t t-set="doc" t-value="doc"/>
            <div class="page">
                <table>
                    <tr>
                        <td style="width:50%">
                            <img t-att-src="'data:image/png;base64,%s' % to_text(doc.company_id.logo)"
                                 style="max-width:80%"/>
                        </td>
                        <td style="width:20%">
                            <h3>
                                <t t-if="doc.sica_cbt == 'sica'">
                                    SICA VOUCHER
                                </t>
                                <t t-if="doc.sica_cbt == 'cbt'">
                                    CBT VOUCHER
                                </t>
                            </h3>
                        </td>
                        <td style="text-align:right;width:30%">
                            <span t-field="doc.company_id.street"/>
                            <br/>
                            <span t-field="doc.company_id.street2"/>
                            <br/>
                            <span t-field="doc.company_id.city"/>
                            -
                            <span t-field="doc.company_id.zip"/>
                            <br/>
                            Tel:
                            <span t-field="doc.company_id.phone"/>
                            <br/>
                            Email:
                            <span t-field="doc.company_id.email"/>
                            <br/>
                            <strong>
                                <span t-field="doc.company_id.website"/>
                            </strong>
                        </td>
                    </tr>
                </table>
                <table style="width:100%">
                    <tr>
                        <td style="padding-right:10px;width:5%">
                            No.
                        </td>
                        <td style="text-align:center;width:15%">
                            <span t-field="doc.voucher_no"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                        <td style="width:55%"/>
                        <td style="text-align:right;padding-right:10px;width:10%">
                            Date
                        </td>
                        <td style="text-align:center;width:15%">
                            <span t-field="doc.voucher_date"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                    </tr>
                </table>
                <table style="width:100%">
                    <tr>
                        <td style="padding-right:10px;width:5%">
                            Pay
                        </td>
                        <td style="text-align:center;width:13%">
                            <span t-field="doc.amount"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                        <td style="text-align:center;padding-left:10px;padding-right:10px;width:10%">
                            (Rupees)
                        </td>
                        <td style="text-align:center;width:72%">
                            <span t-field="doc.amount_in_words"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                    </tr>
                </table>
                <br/>
                <hr style="height:1px solid black;background:black;"/>
                <table style="width:100%">
                    <tr>
                        <td style="padding-right:10px;width:7%">
                            To
                        </td>
                        <td style="text-align:center;width:93%">
                            <span t-field="doc.name"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-right:10px;width:7%">
                            For
                        </td>
                        <td style="text-align:center;width:93%">
                            <span t-field="doc.expense_reason"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                    </tr>
                </table>
                <br/>
                <hr style="height:1px solid black;background:black;"/>
                <div style="text-align:center">
                    Authorized Signature
                </div>
                <br/>
                <table style="border-collapse: collapse;width:100%;">
                    <tr>
                        <td style="padding-top:10px;width:20%">
                            Paid Cash/Cheque No
                        </td>
                        <td style="text-align:center;padding-top:10px;padding-right:20px;border-right:1px solid black;border-collapse: collapse;width:30%">

                            <span t-field="doc.payment_option"/> <span t-field="doc.reference_no"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                        <td style="text-align:right;padding-top:10px;width:50%">
                            Received the sum specified above
                        </td>
                    </tr>
                    <tr>
                        <td style="width:20%"/>
                        <td style="border-right:1px solid black;border-collapse: collapse;width:30%"/>
                        <td style="text-align:right;width:50%">
                            <br/>
                            Signature of Receiver
                            <br/>
                        </td>
                    </tr>
                </table>
                <br/>
                <br/>
                <table style="width:100%">
                    <tr>
                        <td style="text-align:center;width:50%;">
                            <h3>
                                Treasurer
                            </h3>
                        </td>
                        <td style="text-align:center;width:50%;">
                            <h3>
                                General Secretary
                            </h3>
                        </td>
                    </tr>
                </table>
                <hr style="height:1px solid black;background:black;"/>
            </div>
        </t>
    </template>

    <template id="report_expense_voucher">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="member_management_system.expense_voucher_document"/>
            </t>
        </t>
    </template>

</odoo>