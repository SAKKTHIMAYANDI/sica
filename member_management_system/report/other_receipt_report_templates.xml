<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="other_receipt_document">
        <t t-call="web.html_container">
            <t t-set="doc" t-value="doc"/>
            <div class="page">
                <table>
                    <tr>
                        <td style="width:50%">
                            <img t-att-src="'data:image/png;base64,%s' % to_text(doc.company_id.logo)"
                                 style="max-width:80%"/>
                        </td>
                        <td style="width:20%">
                            <h3>
                                OTHER RECEIPT
                            </h3>
                        </td>
                        <td style="text-align:right;width:30%">
                            <t t-if="doc.env.context.get('member_copy', False)">
                                <strong>Member Copy</strong>
                            </t>
                            <t t-if="not doc.env.context.get('member_copy', False)">
                                <strong>Office Copy</strong>
                            </t>
                            <br/>
                            <span t-field="doc.company_id.street"/>
                            <br/>
                            <span t-field="doc.company_id.street2"/>
                            <br/>
                            <span t-field="doc.company_id.city"/>
                            -
                            <span t-field="doc.company_id.zip"/>
                            <br/>
                            Tel:
                            <span t-field="doc.company_id.phone"/>
                            <br/>
                            Email:
                            <span t-field="doc.company_id.email"/>
                            <br/>
                            <strong>
                                <span t-field="doc.company_id.website"/>
                            </strong>
                            <br/>
                            PAN:
                            <span t-field="doc.pan"/>
                            <br/>
                        </td>
                    </tr>
                </table>
                <table style="width:100%">
                    <tr>
                        <td style="padding-right:10px;width:5%">
                            No.
                        </td>
                        <td style="text-align:center;width:15%">
                            <span t-field="doc.receipt_no"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                        <td style="width:55%"/>
                        <td style="text-align:right;padding-right:10px;width:10%">
                            Date
                        </td>
                        <td style="text-align:center;width:15%">
                            <span t-field="doc.receipt_date"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                    </tr>
                </table>
                <table style="width:100%">
                    <tr>
                        <td style="text-align:right;padding-left:20px;width:40%">
                            Received with thanks from Mr./Mrs./M/s.
                        </td>
                        <td style="text-align:center;width:60%">
                            <span t-field="doc.name"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                    </tr>
                </table>
                <table style="width:100%">
                    <tr>
                        <td style="padding-right:20px;width:30%">
                            the sum of Rupees (In words)
                        </td>
                        <td style="text-align:center;width:70%">
                            <span t-field="doc.amount_in_words"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                    </tr>
                </table>
                <table style="width:100%">
                    <tr>
                        <td style="padding-right:20px;width:5%">
                            Rs.
                        </td>
                        <td style="text-align:center;width:20%">
                            <span t-field="doc.amount"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                        <td style="padding-right:20px;width:15%">
                            Payment Option
                        </td>
                        <td style="text-align:center;width:20%">
                            <span t-field="doc.payment_option"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                        <td style="padding-right:20px;width:15%">
                            Payment Dated
                        </td>
                        <td style="text-align:center;width:20%">
                            <span t-field="doc.payment_date"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                        <td style="width:5%"></td>
                    </tr>
                </table>
                <table style="width:100%">
                    <tr>
                        <td style="padding-right:20px;width:15%">
                            Receipt Type
                        </td>
                        <td style="text-align:center;width:20%">
                            <span t-field="doc.receipt_type"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                        <td style="padding-right:20px;width:15%">
                            Payment Reference
                        </td>
                        <td style="text-align:center;width:20%">
                            <span t-field="doc.payment_ref"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                    </tr>
                </table>
                <table style="width:100%">
                    <tr t-if="doc.receipt_type == 'donation'">
                        <td style="padding-right:20px;width:15%">
                            Donation Type
                        </td>
                        <td style="text-align:center;width:20%">
                            <span t-field="doc.donation_type"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                    </tr>
                    <tr t-if="doc.receipt_type == 'vendor'">
                        <td style="padding-right:20px;width:15%">
                            Vendor Reference
                        </td>
                        <td style="text-align:center;width:20%">
                            <span t-field="doc.vendor_ref"/>
                            <hr style="height:1px solid black;background:black;"/>
                        </td>
                    </tr>
                </table>
                <br/>
                <hr style="height:1px solid black;background:black;"/>
                <br/>
                <div style="text-align:right;">
                    <h3>
                        Authorized Signature
                    </h3>
                </div>
            </div>
        </t>
    </template>

    <template id="receipt_other_receipt_office_copy">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="member_management_system.other_receipt_document"/>
            </t>
        </t>
    </template>

    <template id="receipt_other_receipt_member_copy">
        <t t-call="web.html_container">
            <t t-set="docs" t-value="docs.with_context(member_copy=True)"/>
            <t t-foreach="docs" t-as="doc">
                <t t-call="member_management_system.other_receipt_document"/>
            </t>
        </t>
    </template>

</odoo>
