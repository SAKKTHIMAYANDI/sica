<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="member_job_provider_tree_view" model="ir.ui.view">
            <field name="name">res.member.tree</field>
            <field name="model">member.job.provider</field>
            <field name="arch" type="xml">
                <tree string="Job provider">
                    <!--                    <field name="avatar_128" widget="image" string="Photo" optional="hide"/>-->
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="member_id" widget="many2one_avatar"/>
                    <field name="membership_no"/>
                    <field name="member_name"/>
                    <field name="mobile_number"/>
                    <field name="project_requirement" invisible="1"/>
                    <field name="date" invisible="1"/>
                    <field name="skill_ids" widget="many2many_tags"/>
                    <field name="post_required_id"/>
                    <field name="required_from"/>
                    <field name="required_till"/>
                </tree>
            </field>
        </record>

        <record id="member_job_provider_form_view" model="ir.ui.view">
            <field name="name">res.member.form</field>
            <field name="model">member.job.provider</field>
            <field name="arch" type="xml">
                <form string="JOb provider" duplicate="false">
                    <header>
                        <button name="button_inactive" type="object" states="active" string="Deactivate"
                                confirm="Are you sure to deactivate the member?"/>
                        <button name="button_active" type="object" states="inactive" string="Activate"
                                confirm="Are you sure to activate the member?"/>
                        <field name="state" widget="statusbar" statusbar_visible="active,inactive" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box">
                            <button type="object" name="action_find_job_seeker" class="oe_stat_button"
                                    string="Matched Job Seeker" widget="statinfo" icon="fa-book"/>
                        </div>
                        <!--                        <field name="profile_pic" widget='image' class="oe_avatar"-->
                        <!--                               options='{"preview_image": "profile_pic"}'/>-->
                        <div class="oe_title">
                            <label for="member_name"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Reference"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="member_name"/>
                                <field name="member_id" widget="many2one_avatar"/>
                                <field name="membership_no"/>
                                <field name="mobile_number"/>
                                <field name="designation" invisible="1"/>
                                <field name="skill_ids" widget="many2many_tags"/>
                            </group>
                            <group>

                                <field name="portifolio_link" string="Outdoor Link" invisible="1"/>
                                <field name="post_required_id"/>
                                <field name="required_from"/>
                                <field name="required_till"/>
                                <field name="date" invisible="1"/>
                                <field name="medium_id" string="Format"/>
                                <field name="grade"/>
                                <field name="experience"/>
                                <field name="note"/>
                                <field name="skill" invisible="1"/>
                            </group>
                        </group>
                        <notebook invisible="1">
                            <page string="Medium">
                                <field name="medium"/>
                            </page>
                            <page string="Job Requirement">
                                <field name="project_requirement"/>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="action_member_job_provider" model="ir.actions.act_window">
            <field name="name">Member Job provider</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">member.job.provider</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click on Create Job provider Record.
                </p>
            </field>
        </record>

        <menuitem id="menu_member_job_provider" name="Job Provider" action="action_member_job_provider"
                  parent="menu_employment_scheme" sequence="-20"/>

    </data>
</odoo>