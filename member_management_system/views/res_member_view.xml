<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="member_filter_view" model="ir.ui.view">
            <field name="name">res.member.list.select</field>
            <field name="model">res.member</field>
            <field name="arch" type="xml">
                <search string="Search Members">
                    <field name="name" string="Member"
                           filter_domain="['|', ('display_name', 'ilike', self), ('membership_no', 'ilike', self)]"/>
                    <field name="contact1" string="Contact No"
                           filter_domain="['|', ('contact1', 'ilike', self), ('contact2', 'ilike', self)]"/>
                    <field name="email" filter_domain="[('email', 'ilike', self)]"/>
                    <field name="state"/>
                    <field name="blood_group"/>
                    <field name="active"/>
                    <separator string="Grade"/>
                    <filter string="Junior" name="junior" domain="[('grade', '=', 'junior')]"/>
                    <filter string="Life" name="life" domain="[('grade', '=', 'life')]"/>
                    <filter string="Active" name="active_grade" domain="[('grade', '=', 'active')]"/>
                    <filter string="Associate" name="associate" domain="[('grade', '=', 'associate')]"/>
                    <filter string="Staff" name="staff" domain="[('grade', '=', 'staff')]"/>
                    <separator string="Status"/>
                    <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                    <filter string="Inactive" name="inactive" domain="[('state', '=', 'inactive')]"/>
                    <filter string="Debar" name="debar" domain="[('state', '=', 'debar')]"/>
                    <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                    <separator string="QR Code"/>
                    <filter string="Not QR Code Generated" name="qr_code" domain="[('qr_code_preview', '=', False)]"/>
                    <filter string="QR Code Generated" name="qr_code" domain="[('qr_code_preview', '!=', False)]"/>
                    <separator/>

                    <separator string="Archive &amp; Unarchive"/>
                    <filter string="Archive" name="active" domain="[('active', '=', False)]"/>
                    <filter string="Unarchive" name="active" domain="[('active', '!=', False)]"/>
                    <separator/>

                    <group expand="0" name="group_by" string="Group By">
                        <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                        <filter name="group_grade" string="Grade" context="{'group_by': 'grade'}"/>
                        <filter name="group_gender" string="Gender" context="{'group_by': 'gender'}"/>
                        <filter name="group_blood_group" string="Blood Group" context="{'group_by': 'blood_group'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="member_tree_view" model="ir.ui.view">
            <field name="name">res.member.tree</field>
            <field name="model">res.member</field>
            <field name="arch" type="xml">
                <tree string="Member Management">
                    <!--                    <field name="avatar_128" widget="image" string="Photo" optional="hide"/>-->
                    <field name="membership_no"/>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="grade"/>
                    <field name="contact1"/>
                    <field name="contact2"/>
                    <field name="paid_till"/>
                    <field name="proof_submitted"/>
                </tree>
            </field>
        </record>

        <record id="member_form_view" model="ir.ui.view">
            <field name="name">res.member.form</field>
            <field name="model">res.member</field>
            <field name="arch" type="xml">
                <form string="Member Management" duplicate="false">
                    <header>
                        <button name="button_inactive" type="object" states="active,debar" string="Deactivate"
                                confirm="Are you sure to deactivate the member?"/>
                        <button name="button_debar" type="object" states="active" string="Debar"
                                confirm="Are you sure to debar the member?"/>
                        <button name="button_active" type="object" states="inactive,debar" string="Activate"
                                confirm="Are you sure to activate the member?"/>
                        <button name="button_expired" type="object" states="active,inactive,debar"
                                string="Mark as Expired"
                                confirm="Are you sure the person is expired? Please fill-up the expired date."/>
                        <button name="generate_pdf" type="object" string="Generate QR"
                                attrs="{'invisible': [('qr_code', '!=', False)]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="active,debar,inactive,expired"
                               readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box">
                            <button type="object" name="view_sica_cbt_receipts" class="oe_stat_button" icon="fa-book"
                                    attrs="{'invisible': [('sica_cbt_receipts', '=', 0)]}">
                                <field name="sica_cbt_receipts" string="SICA/CBT" widget="statinfo"/>
                            </button>
                        </div>
                        <field name="image_1920" widget='image' class="oe_avatar"
                               options='{"preview_image": "image_1920"}'/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <!--                                <field name="name" default_focus="1" placeholder="Member's Name"/><br/>-->
                                <!--                                <field name="membership_no" readonly="1"/>-->
                                <field class="text-break" name="name" placeholder="e.g. Name"/>
                                <br/>
                                <span style="padding-left:5;font-size:18px;padding-right:10px;">Membership No.
                                </span>
                                <field class="text-break" name="membership_no" readonly="1"
                                       placeholder="**"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="General Details">
                                <group>
                                    <group>
                                        <field name="alias_name" placeholder="Alias or Screen Name"/>
                                        <field name="membership_no" readonly="0"/>
                                        <field name="fefsi_card" readonly="0"/>
                                        <field name="experience" invisible="1"/>
                                        <field name="designation" invisible="1"/>
                                        <field name="medium" invisible="1"/>
                                        <field name="medium_id" invisible="1"/>
                                        <field name="grade"/>
                                        <field name="date_of_join"/>
                                        <field name="subscription_end_date"/>
                                        <field name="skills" invisible="1"/>
                                        <field name="educational_qualification" string="Educational"/>
                                        <field name="gender"/>
                                        <field name="active"/>
                                    </group>
                                    <group>
                                        <field name="attachment_id" invisible="1" filename="attachment_file_name"/>
                                        <field name="attachment_file_name" invisible="1"/>
                                        <field name="qr_code_preview" string="QR Code"
                                              />
                                        <field name="qr_code_preview" widget='image'
                                               options="{'preview_image': 'qr_code_preview', 'size': [120, 120]}"
                                               invisible="1"/>
                                        <field name="qr_code" readonly="1" string="QR Download"
                                               filename="qr_code_filename"/>
                                        <field name="qr_code_filename" invisible="1"/>
                                        <field name="dob"/>

                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="company_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="lcf" widget="monetary"/>
                                        <field name="loans" widget="monetary"/>
                                        <field name="aids" widget="monetary"/>
                                    </group>
                                    <group>
                                        <field name="sica_fee" widget="monetary"/>
                                        <field name="cbt_fee" widget="monetary"/>
                                        <field name="paid_till"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="photo_submitted"/>
                                        <field name="proof_submitted"/>
                                        <field name="pensioner"/>
                                    </group>
                                    <group>
                                        <field name="cam_life"/>
                                        <field name="expired_date"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Personal Details">
                                <group string="Personal Info">
                                    <group>
                                        <field name="father_name"/>
                                        <field name="mother_name"/>
                                    </group>
                                    <group>
                                        <field name="blood_group"/>
                                        <field name="notes_privacy" string="About Me Privacy"/>
                                        <field name="notes" string="About Me"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Nominee #1">
                                        <field name="nominee1" string="Nominee"/>
                                        <field name="nominee1_relationship" string="Relationship"/>
                                        <field name="nominee1_others" string="Others"
                                               attrs="{'invisible': [('nominee1_relationship', '!=', 'others')]}"/>
                                        <field name="nominee1_photo" string="Photo" filename="nominee1_fname"/>
                                        <field name="nominee1_fname" invisible="1"/>
                                    </group>
                                    <group string="Nominee #2">
                                        <field name="nominee2" string="Nominee"/>
                                        <field name="nominee2_relationship" string="Relationship"/>
                                        <field name="nominee2_others" string="Others"
                                               attrs="{'invisible': [('nominee2_relationship', '!=', 'others')]}"/>
                                        <field name="nominee2_photo" string="Photo" filename="nominee2_fname"/>
                                        <field name="nominee2_fname" invisible="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Contact Details" name="contact_info">
                                <group string="Contact Info">
                                    <group>
                                        <field name="contact_privacy"/>
                                        <field name="contact1"/>
                                        <field name="contact2"/>
                                    </group>
                                    <group>
                                        <field name="email"/>
                                    </group>
                                </group>
                                <group string="Address Info">
                                    <field name="single_address_line" invisible="1"/>
                                    <group>
                                        <label for="street" string="Residential Address"/>
                                        <div class="o_address_format">
                                            <field name="street" placeholder="Res Street..." class="o_address_street"/>
                                            <field name="street2" placeholder="Res Street 2..."
                                                   class="o_address_street"/>
                                            <field name="city" placeholder="Res City" class="o_address_city"/>
                                            <field name="state_id" class="o_address_state" placeholder="Res State"
                                                   options='{"no_open": True}'/>
                                            <field name="zip" placeholder="Res ZIP" class="o_address_zip"/>
                                            <field name="country_id" placeholder="Res Country" class="o_address_country"
                                                   options='{"no_open": True, "no_create": True}'/>
                                        </div>
                                    </group>
                                    <group>
                                        <field name="address_same_as_res"/>
                                        <label for="per_street" string="Permanent Address"/>
                                        <div class="o_address_format">
                                            <field name="per_street" placeholder="Per Street..."
                                                   class="o_address_street"/>
                                            <field name="per_street2" placeholder="Per Street 2..."
                                                   class="o_address_street"/>
                                            <field name="per_city" placeholder="Per City" class="o_address_city"/>
                                            <field name="per_state_id" class="o_address_state" placeholder="Per State"
                                                   options='{"no_open": True}'/>
                                            <field name="per_zip" placeholder="Per ZIP" class="o_address_zip"/>
                                            <field name="per_country_id" placeholder="Per Country"
                                                   class="o_address_country"
                                                   options='{"no_open": True, "no_create": True}'/>
                                        </div>
                                    </group>
                                </group>
                            </page>
                            <page string="Attachments">
                                <group>
                                    <group>
                                        <field name="aadhaar_card" filename="aadhaar_fname"/>
                                        <field name="aadhaar_fname" invisible="1"/>
                                        <field name="membership_id_card" filename="membership_id_card_fname"/>
                                        <field name="membership_id_card_fname" invisible="1"/>
                                        <field name="membership_form" filename="membership_form_file_name"/>
                                        <field name="membership_form_file_name" invisible="1"/>
                                        <field name="other_attachments" filename="other_fname"/>
                                        <field name="other_fname" invisible="1"/>
                                    </group>
                                    <group/>
                                </group>
                                <field name="document_ids" readonly="0">
                                    <tree editable="bottom" create="1">
                                        <field name="description" required="1"/>
                                        <field name="name" invisible="1"/>
                                        <field name="datas" string="Download" filename="name" widget="download_link"
                                               required="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Official Details">
                                <group>
                                    <group string="Medical Details">
                                        <field name="medical_card_no"/>
                                        <field name="nalavariam_reg_no"/>
                                    </group>
                                    <group string="Bank Details">
                                        <field name="bank_acc_no"/>
                                        <field name="bank_name_ifsc"/>
                                        <field name="remarks"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Works">
                                <field name="work_ids">
                                    <tree editable="bottom">
                                        <field name="id" invisible="1"/>
                                        <field name="project_name"/>
                                        <field name="year"/>
                                        <field name="designation"/>
                                        <field name="format"/>
                                        <field name="dop_name"/>
                                        <field name="image"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Social Links">
                                <group>
                                    <group>
                                        <field name="portifolio_link"/>
                                        <field name="facebook_link"/>
                                        <field name="instagram_link"/>
                                        <field name="imdb_link"/>
                                        <field name="other_link"/>
                                    </group>
                                    <group>
                                        <field name="youtube_link"/>
                                        <field name="twitter_link"/>
                                        <field name="linkedin_link"/>
                                        <field name="vimeo_link"/>
                                    </group>

                                </group>
                            </page>
                            <page string="Permission">
                                <group>
                                    <group>
                                        <field name="show_social_link"/>
                                        <field name="show_discussion"/>
                                        <field name="show_all_members"/>
                                        <field name="show_all_works"/>
                                        <field name="show_job_seeker"/>
                                        <field name="show_job_provider"/>
                                        <field name="show_grievance_forum"/>
                                        <field name="show_shooting"/>
                                        <field name="show_shooting_dop"/>
                                        <field name="show_contact"/>
                                        <field name="show_notes"/>
                                    </group>
                                </group>
                            </page>
                            <page name="push_token" string="Firebase Token">
                                <group string="Tokens">
                                    <field name="token" string="Token"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="member_kanban_view" model="ir.ui.view">
            <field name="name">res.member.kanban</field>
            <field name="model">res.member</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban" sample="1">
                    <field name="id"/>
                    <field name="display_name"/>
                    <field name="state"/>
                    <field name="grade"/>
                    <field name="contact1"/>
                    <field name="contact2"/>
                    <field name="email"/>
                    <field name="avatar_128"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                <div class="o_kanban_image_fill_left o_kanban_image_full" role="img"
                                     t-attf-style="background-image: url(#{kanban_image('res.member', 'avatar_128', record.id.raw_value)})"/>
                                <div class="oe_kanban_details d-flex flex-column">
                                    <strong class="o_kanban_record_title oe_partner_heading">
                                        <field name="display_name"/>
                                    </strong>
                                    <ul>
                                        <li t-if="record.state.raw_value">
                                            Status:
                                            <field name="state"/>
                                        </li>
                                        <li t-if="record.grade.raw_value">
                                            Grade:
                                            <field name="grade"/>
                                        </li>
                                        <li t-if="record.contact1.raw_value and record.contact2.raw_value">
                                            Contact:<field name="contact1"/>/
                                            <field name="contact2"/>
                                        </li>
                                        <li t-elif="record.contact1.raw_value">
                                            Contact:
                                            <field name="contact1"/>
                                        </li>
                                        <li t-elif="record.contact2.raw_value">
                                            Contact:
                                            <field name="contact2"/>
                                        </li>
                                        <li t-if="record.email.raw_value" class="o_text_overflow">
                                            <field name="email"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_res_member" model="ir.actions.act_window">
            <field name="name">Member Management</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.member</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click on Create button to create a new member.
                </p>
            </field>
        </record>


        <record id="member_work_filter_view" model="ir.ui.view">
            <field name="name">member.work</field>
            <field name="model">member.work</field>
            <field name="arch" type="xml">
                <search string="Search Members">
                    <field name="duplicate_member_id" string="Member"/>
                    <field name="project_name" filter_domain="[('project_name', 'ilike', self)]"/>
                    <separator string="Status"/>
                    <filter string="Approved" name="approved" domain="[('approve_status', '=', 'Approved')]"/>
                    <filter string="Waiting_for_approval" name="waiting_for_approval" domain="[('approve_status', '=', 'Waiting_for_approval')]"/>
                    <filter string="Rejected" name="rejected" domain="[('approve_status', '=', 'Rejected')]"/>
                    <separator/>
                    <separator string="Request Type"/>
                    <filter string="Create" name="create" domain="[('request_type', '=', 'Create')]"/>
                    <filter string="Update" name="update" domain="[('request_type', '=', 'Update')]"/>
                    <filter string="Delete" name="delete" domain="[('request_type', '=', 'Delete')]"/>
                    <separator/>

                    <group expand="0" name="group_by" string="Group By">
                        <filter name="approve_status" string="Status" context="{'group_by': 'approve_status'}"/>
                        <filter name="request_type" string="Request Type" context="{'group_by': 'request_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_member_work" model="ir.actions.act_window">
            <field name="name">Member Work</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">member.work</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('approve_status', '=', 'Waiting_for_approval')]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click on Create button to create a new member.
                </p>
            </field>
        </record>

        <record id="member_works_tree" model="ir.ui.view">
            <field name="name">member.work.tree</field>
            <field name="model">member.work</field>
            <field name="arch" type="xml">
                <tree delete="1" default_order="write_date desc">
                    <field name="id" invisible="1"/>
                    <field name="duplicate_member_id" string="Member"/>
                    <field name="project_name"/>
                    <field name="year"/>
                    <field name="write_date" string="Last Updated Date"/>
                    <field name="designation"/>
                    <field name="format"/>
                    <field name="dop_name"/>
                    <field name="image"/>
                    <field name="request_type"/>
                    <button name="action_approve" string="Approve" class="btn-primary" type="object"/>
                    <button name="action_reject" string="Reject" class="btn-danger" type="object"/>
                    <field name="approve_status"/>
                </tree>
            </field>
        </record>

        <record id="member_member_form_view" model="ir.ui.view">
            <field name="name">member.work.form</field>
            <field name="model">member.work</field>
            <field name="arch" type="xml">
                <form string="Member Work" duplicate="false">
                    <sheet>
                        <div class="oe_button_box">
                        </div>
                        <field name="proof_image" widget='image' class="oe_avatar"
                               options='{"preview_image": "proof_image"}'/>
                        <group>
                            <group>
                                <field name="duplicate_member_id" readonly="1"/>
                                <field name="project_name" readonly="1"/>
                                <field name="year" readonly="1"/>
                                <field name="designation" readonly="1"/>
                                <field name="image" widget='image' class="oe_avatar"
                                options='{"preview_image": "image"}'/>
                            </group>
                            <group>
                                <field name="format" readonly="1"/>
                                <field name="dop_name" readonly="1"/>
                                <field name="request_type" readonly="1"/>
                                <field name="approve_status" readonly="1"/>
                                <field name="weblink" readonly="1"/>
                                <field name="language" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_member_work_approve" model="ir.actions.act_window">
            <field name="name">Member Work Approve Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">member.work.status</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click on Create button to create a new member.
                </p>
            </field>
        </record>

        <record id="member_works_tree_approve" model="ir.ui.view">
            <field name="name">member.work.tree.approval</field>
            <field name="model">member.work.status</field>
            <field name="arch" type="xml">
                <tree create="0" delete="1" duplicate="0" default_order="write_date desc">
                    <field name="user_id"/>
                    <field name="member_id"/>
                    <field name="status"/>
                    <field name="date"/>
                    <field name="project_name"/>
                    <field name="year"/>
                    <field name="write_date" string="Last Updated Date"/>
                    <field name="designation"/>
                    <field name="format"/>
                    <field name="dop_name"/>
                    <field name="image"/>
                    <field name="request_type"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        <record id="member_member_form_view_approve" model="ir.ui.view">
            <field name="name">member.work.form.approve</field>
            <field name="model">member.work.status</field>
            <field name="arch" type="xml">
                <form string="Member Work Approve Status" create="0" delete="0" duplicate="0">
                    <sheet>
                        <div class="oe_button_box">
                        </div>
                        <field name="proof_image" widget='image' class="oe_avatar"
                               options='{"preview_image": "proof_image"}'/>
                        <group>
                            <group>
                                <field name="project_name" readonly="1"/>
                                    <field name="year" readonly="1"/>
                                    <field name="designation" readonly="1"/>
                                    <field name="image" widget='image' class="oe_avatar"
                                    options='{"preview_image": "image"}'/>
                                </group>
                            <group>
                                <field name="format" readonly="1"/>
                                <field name="dop_name" readonly="1"/>
                                <field name="request_type" readonly="1"/>
                                <field name="user_id"/>
                                <field name="member_id"/>
                                <field name="status"/>
                                <field name="date"/>
                                <field name="remark"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>





    </data>




</odoo>
