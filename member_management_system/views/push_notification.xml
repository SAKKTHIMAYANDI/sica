<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

     <menuitem name="Envoyer Notifications"
            id="menu_firebase_push_notification_push"
            sequence="6"/>

        <record id="firebase_push_notification_push_notification_tree_view" model="ir.ui.view">
            <field name="name">push.notification.log.history.tree.view</field>
            <field name="model">push.notification.log.history</field>
            <field name="arch" type="xml">
                <tree  string="Push Notification" sample="1" decoration-danger="notification_state == 'Failed'" decoration-success="notification_state =='success'" create="0" delete="0" duplicate="0" edit="0">
                    <field name="member_id" widget="many2many_tags"/>
                    <field name="source"/>
                    <field name="date_send"/>
                    <field name="notification_state"/>
                </tree>
            </field>
        </record>


        <record id="firebase_push_notification_push_notification_form_view" model="ir.ui.view">
            <field name="name">push.notification.log.history.form</field>
            <field name="model">push.notification.log.history</field>
            <field name="arch" type="xml">
                <form string="Push Notification" create="0" delete="0" duplicate="0" edit="0">
                    <sheet>
                        <group>
                            <group string="Info Notification">
                                <field name="member_id" widget="many2many_tags"/>
                                <field name="source"/>
                                <field name="date_send"/>
                                <field name="notification_state"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_firebase_push_notification_push_notification" model="ir.actions.act_window">
            <field name="name">Envoyer notifications</field>
            <field name="res_model">push.notification.log.history</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   Créer votre première notification
                </p>
                <p>
                   Odoo vous aide facilement à suivre toutes les notifications envoyèes à vos clients.
                </p>
            </field>
        </record>


        <menuitem name="Notifications"
            action="action_firebase_push_notification_push_notification"
            id="menu_send_notification"
            parent="menu_firebase_push_notification_push"
            sequence="20"/>




</odoo>