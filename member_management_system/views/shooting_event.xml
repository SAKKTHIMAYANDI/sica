<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="shooting_event_tree_view" model="ir.ui.view">
        <field name="name">shooting.event.tree</field>
        <field name="model">shooting.event</field>
        <field name="arch" type="xml">
            <tree string="Event" decoration-success="is_completed != False" decoration-danger="is_completed == False" default_order="start_date desc">
                <field name="title"/>
                <field name="category_id"/>
                <field name="amount"/>
                <field name="start_date"/>
                <field name="description"/>
                <field name="is_completed"
                           optional="show" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="shooting_event_form_view" model="ir.ui.view">
        <field name="name">shooting.event.form</field>
        <field name="model">shooting.event</field>
        <field name="arch" type="xml">
            <form string="Event" duplicate="false">
                <header>
                    <button name="action_completed_event"  string="Event Complete" type="object" class="btn-primary" attrs="{'invisible': [('is_completed', '=', True)]}"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Completed" bg_color="bg-success" attrs="{'invisible': [('is_completed', '=', False)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" default_focus="1" placeholder="Reference"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="title" required="1"/>
                            <field name="is_completed" invisible="1"/>
                            <field name="category_id" required="1"/>
                            <field name="amount" required="1"/>
                            <field name="description" required="1"/>
                            <field name="coach_name" invisible="1"/>
                            <field name="start_date" required="1" string="Event Date"/>
                            <field name="end_date" invisible="1"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="venue"/>
                            <field name="time"/>
                            <field name="map"/>
                            <field name="program_presenters"/>
                            <field name="presised_by"/>
                            <field name="chief_guest"/>
                            <field name="note" string="About"/>
                            <field name="image" invisible="1"/>
                            <field name="attachments_ids" widget="many2many_binary" string="Images"/>
                            <field name="images_note" readonly="1"/>
                            <field name="event_link" attrs="{'invisible': [('is_completed', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Booking Details">
                            <field name="booking_status_ids">
                                <tree editable="bottom">
                                    <field name="member_id"/>
                                    <field name="payment_status"/>
                                    <field name="booking_status"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Completed Events Details">
                            <field name="complete_event_ids">
                                <tree editable="bottom">
                                    <field name="attachments_ids" widget="many2many_binary" string="Images"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>


    <record id="action_shooting_event" model="ir.actions.act_window">
        <field name="name">Event</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shooting.event</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click on Create Shooting Event
            </p>
        </field>
    </record>

    <menuitem id="menu_shooting_event" name="Event" action="action_shooting_event"
              parent="menu_events" sequence="30"/>

    <record id="event_category_tree_view" model="ir.ui.view">
        <field name="name">event.category.tree</field>
        <field name="model">event.category</field>
        <field name="arch" type="xml">
            <tree string="Event Category" editable="bottom">
                <field name="name" required="1"/>
            </tree>
        </field>
    </record>

    <record id="action_event_category" model="ir.actions.act_window">
        <field name="name">Event Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">event.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click on Create Event Category
            </p>
        </field>
    </record>

    <menuitem id="menu_event_category" name="Category" action="action_event_category"
              parent="menu_events" sequence="1"/>


</odoo>
