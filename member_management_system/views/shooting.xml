<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="shooting_title_tree_view" model="ir.ui.view">
        <field name="name">shooting.title.tree</field>
        <field name="model">shooting.title</field>
        <field name="arch" type="xml">
            <tree string=" Project Title">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="shooting_title_form_view" model="ir.ui.view">
        <field name="name">shooting.title.form</field>
        <field name="model">shooting.title</field>
        <field name="arch" type="xml">
            <form string=" Project Title">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                    </group>
                    <notebook>
                        <page string="Shooting">
                            <field name="shooting_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="member_id"/>
                                    <field name="designation"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="medium_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_shooting_title" model="ir.actions.act_window">
        <field name="name">Project Title</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shooting.title</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click on Create Shooting Title
            </p>
        </field>
    </record>

    <menuitem id="menu_shooting_title" name="Project Title" action="action_shooting_title"
              parent="menu_shooting" sequence="1"/>


    <record id="shooting_image_view" model="ir.ui.view">
        <field name="name">shooting.image.tree</field>
        <field name="model">shooting.image</field>
        <field name="arch" type="xml">
            <tree string=" Shooting Image" create="0" delete="0" duplicate="0">
                <field name="name" string="Description"/>
            </tree>
        </field>
    </record>

    <record id="shooting_image_form_view" model="ir.ui.view">
        <field name="name">shooting.image.form</field>
        <field name="model">shooting.image</field>
        <field name="arch" type="xml">
            <form string=" Shooting Image" create="0" delete="0" duplicate="0">
                <sheet>
                    <group>
                        <field name="name" string="Description" required="1"/>
                        <field name="image" widget="image" options="{'preview_image': 'image', 'size': [200, 200]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_shooting_image" model="ir.actions.act_window">
        <field name="name">Shooting Image</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shooting.image</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click on Create Shooting Image
            </p>
        </field>
    </record>

    <menuitem id="menu_shooting_image" name="Shooting Image" action="action_shooting_image"
              parent="menu_shooting" sequence="2"/>

    <record id="sica_shooting_tree_view" model="ir.ui.view">
        <field name="name">sica.shooting.tree</field>
        <field name="model">sica.shooting</field>
        <field name="arch" type="xml">
            <tree string="Update Shooting">
                <field name="name"/>
                <field name="date"/>
                <field name="member_id"/>
                <field name="mobile_number"/>
                <field name="member_name"/>
                <field name="member_number"/>
                <field name="designation"/>
                <field name="project_title"/>
                <field name="medium" invisible="1"/>
                <field name="medium_id"/>
                <field name="dop_member_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="sica_shooting_form_view" model="ir.ui.view">
        <field name="name">sica.shooting.form</field>
        <field name="model">sica.shooting</field>
        <field name="arch" type="xml">
            <form string="Update Shooting" duplicate="false">
                <header>
                    <button name="action_dop_approved" type="object" string="Dop Approve"
                                class="btn-success" states="Waiting For Dop Approval"/>
                    <button name="action_dop_reject" type="object" string="Dop Reject"
                               class="btn-warning" states="Waiting For Dop Approval"/>
                        <field name="state" widget="statusbar" statusbar_visible="Shooting Updated,Waiting For Dop Approval,Dop Approved"
                               readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Reference"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="member_id"/>
                            <field name="mobile_number"/>
                            <field name="member_name"/>
                            <field name="member_number"/>
                            <field name="grade"/>
                            <field name="designation"/>
                            <field name="dop_name" invisible="0"/>
                            <field name="dop_number" invisible="0"/>
                            <field name="dop_member_id"/>
                        </group>
                        <group>
                            <field name="shooting_title_id" string="Project Title"/>
                            <field name="project_title" invisible="0"/>
                            <field name="medium" invisible="0"/>
                            <field name="medium_id"/>
                            <field name="producer"/>
                            <field name="production_house"/>
                            <field name="production_executive"/>
                            <field name="production_executive_contact_no"/>
                            <field name="location"/>
                            <field name="outdoor_unit_name"/>
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>


    <record id="action_sica_shooting" model="ir.actions.act_window">
        <field name="name">Update Shooting</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sica.shooting</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click on Create Sica Shooting
            </p>
        </field>
    </record>

    <menuitem id="menu_sica_shooting" name="Shooting Update" action="action_sica_shooting"
              parent="menu_shooting" sequence="3"/>


    <record id="shooting_dop_tree_view" model="ir.ui.view">
        <field name="name">shooting.dop.tree</field>
        <field name="model">shooting.dop</field>
        <field name="arch" type="xml">
            <tree string="Shooting DOP">
                <field name="name"/>
                <field name="date"/>
                <field name="member_id"/>
                <field name="mobile_number"/>
                <field name="member_name"/>
                <field name="member_number"/>
                <field name="designation" invisible="1"/>
                <field name="shooting_title_id" string="Project Title"/>
                <field name="medium_id" string="Format"/>
                <field name="schedule_start"/>
                <field name="schedule_end"/>
            </tree>
        </field>
    </record>

    <record id="shooting_dop_form_view" model="ir.ui.view">
        <field name="name">shooting.dop.form</field>
        <field name="model">shooting.dop</field>
        <field name="arch" type="xml">
            <form string="Shooting DOP" duplicate="false">
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Reference"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="shooting_id" invisible="1"/>
                            <field name="member_id"/>
                            <field name="mobile_number"/>
                            <field name="member_name"/>
                            <field name="member_number"/>
                            <field name="grade"/>
                            <field name="designation" invisible="1"/>
                        </group>

                        <group>
                            <field name="medium" invisible="0" string="Format"/>
                            <field name="medium_id" string="Format" invisible="1"/>
                            <field name="shooting_title_id" string="Project Title" invisible="1"/>
                            <field name="project_title" invisible="0"/>
                            <field name="schedule_start"/>
                            <field name="schedule_end"/>
                            <field name="producer"/>
                            <field name="production_house"/>
                            <field name="production_executive"/>
                            <field name="production_executive_contact_no"/>
                            <field name="location"/>
                            <field name="outdoor_link_details"/>
<!--                            <field name="attending" invisible="1"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page string="Assistant Details">
                            <field name="associate_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="member_role_tpe"/>
                                    <field name="mobile_number"/>
                                    <field name="member_id"/>
                                    <field name="member_number"/>
<!--                                    <field name="attending"/>-->
<!--                                    <field name="not_attending_reason"/>-->
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>


    <record id="action_shooting_dop" model="ir.actions.act_window">
        <field name="name">Shooting DOP</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shooting.dop</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click on Create Sica DOP
            </p>
        </field>
    </record>

    <menuitem id="menu_shooting_dop" name="DOP Update" action="action_shooting_dop"
              parent="menu_shooting" sequence="4"/>


</odoo>