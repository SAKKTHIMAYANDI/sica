<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="member_payment_request_tree_view" model="ir.ui.view">
        <field name="name">member.payment.request.tree</field>
        <field name="model">member.payment.request</field>
        <field name="arch" type="xml">
            <tree >
                <field name="name" string="Reference" required="1"/>
                                <field name="create_date"/>

                <field name="membership_no"/>
                <field name="member_name"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>
    <record id="member_payment_request_form_view" model="ir.ui.view">
        <field name="name">member.payment.request.form</field>
        <field name="model">member.payment.request</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" string="Reference" required="1"/>
                                    <field name="create_date"/>

                    <field name="membership_no"/>
                    <field name="member_name"/>
                    <field name="member_id" widget="many2one_avatar"/>
                    <field name="amount"/>
                    <field name="payment_link"/>
                    <field name="contact_no"/>
                    <field name="note"/>
                    <field name="event_id"/>
                    <field name="event_name"/>
                    <field name="remark"/>
                </group>
            </form>
        </field>
    </record>


    <record id="action_member_payment_request" model="ir.actions.act_window">
        <field name="name">Payment Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">member.payment.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click on Create button to create payment request.
            </p>
        </field>
    </record>
    <menuitem id="menu_payment_request" name="Payment Request"
              parent="menu_payment_gateway" action="action_member_payment_request"
              sequence="10"/>
</odoo>